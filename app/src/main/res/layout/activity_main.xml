<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brend.tictactoe.MainActivity">

    <Button
        android:id="@+id/one"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/two"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/three"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignLeft="@+id/six"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/six"
        android:padding="0px"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/four"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/one"
        android:layout_toEndOf="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/five"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/one"
        android:layout_toEndOf="@+id/three"
        android:layout_toRightOf="@+id/three"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/six"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/three"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/seven"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/four"
        android:layout_toEndOf="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/eight"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_below="@+id/five"
        android:layout_toEndOf="@+id/six"
        android:layout_toRightOf="@+id/six"
        android:text=" "
        android:textSize="70px" />

    <Button
        android:id="@+id/nine"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignLeft="@+id/six"
        android:layout_alignStart="@+id/six"
        android:layout_below="@+id/six"
        android:text=" "
        android:textSize="70px" />

    <TextView
        android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seven"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:text="Click a button to start"
        android:textSize="40px" />

</RelativeLayout>
